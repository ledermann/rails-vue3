{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./app/packs",
    "paths": {
      "@/*": ["./app/packs/*"]
    },
    "types": [
      "jest",
      "node"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "app/packs/**/*.ts",
    "app/packs/**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
