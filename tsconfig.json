{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/packs/src/*"],
      "@test/*": ["./spec/packs/src/*"]
    },
    "types": ["jest", "node"],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["app/packs/**/*.ts", "app/packs/**/*.vue", "spec/packs/**/*.ts"],
  "exclude": ["node_modules", "public"]
}
